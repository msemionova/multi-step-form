{
  "extends": "next/core-web-vitals",
  "rules": {
    "eol-last": ["error", "always"],
    "max-len": ["error", { "code": 100 }],
    "quotes": [
      "error",
      "single"
    ],
    "object-curly-spacing": ["error", "always"],
    "no-multiple-empty-lines": ["error", {
      "max": 1,
      "maxEOF": 0,
      "maxBOF": 0
    }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "semi": ["error", "always"],
    "semi-style": [
      "error",
      "last"
    ]
  }
}
